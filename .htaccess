<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Try these RewriteBase options one at a time:
    # Option 1 (most common):
#    RewriteBase /public/
RewriteEngine On
RewriteRule ^(.*)$ /public/$1 [L]   
    # Option 2 (if using cPanel username in URL):
    # RewriteBase /~yourusername/backend/
    
    # Option 3 (if nothing else works):
    # RewriteBase /

    # Handle Authorization Header - Enhanced for JWT
    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]
    
    # Additional Authorization Header handling for different server configurations
    RewriteCond %{HTTP:Authorization} ^Bearer\ (.*)$
    RewriteRule .* - [e=HTTP_AUTHORIZATION:Bearer\ %1]
    
    # Ensure Authorization header is passed through
    SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1

    # Remove trailing slashes
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Front controller routing
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Additional headers for API requests
<IfModule mod_headers.c>
    # Allow Authorization header
    Header always set Access-Control-Allow-Headers "Authorization, Content-Type, Accept, X-Requested-With"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    
    # Handle preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

